body
{
  background-color: #F7F9FC;
  font-family: 'Lora', serif;
  font-size: 17px;
  font-weight: lighter;
  display: block;
  margin: 8px;
}


img {
  width: 200px;
  height: 200px;
  border-radius: 50%;
}


h1, h2, h3 {
  font-family: 'Roboto', sans-serif;
}
​
h1 {
  font-size: 32px;
  font-weight: 900;
  color: #575F7D;
}
​
​
#green {
    color: #7ECE90;
    font-size: 100px;
    font-weight: 500;
}
​
a {
   font-family: 'Roboto', sans-serif;
   text-decoration: none;
   color: #6B72E1;
   font-weight: 600;
   font-size: 16px;
}

@media (max-width: 960px) {
  /* For a screen < 960px, this CSS will be read */
  .container {
    width: 700px;
  }
}
@media (max-width: 720px) {
  /* For a screen < 720px, this CSS will be read */
  .container {
    width: 500px;
  }
}
@media (max-width: 540px) {
  /* For a screen < 540px, this CSS will be read */
  .container {
    width: 300px;
  }
}
